<% layout('layout') %>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
    <h2 class="text-center mb-4" style="color: #007bff;">Sign Up</h2>
    <form method="POST" action="/api/v1/users/signup">
      <div class="form-group mb-3">
        <input type="text" name="username" class="form-control form-control-lg" placeholder="Username" required style="border-radius: 12px;">
      </div>
      <div class="form-group mb-3">
        <input type="email" name="email" class="form-control form-control-lg" placeholder="Email" required style="border-radius: 12px;">
      </div>
      <div class="form-group mb-4">
        <input type="password" name="password" class="form-control form-control-lg" placeholder="Password" required style="border-radius: 12px;">
      </div>
      <button type="submit" class="btn btn-primary w-100 btn-lg" style="border-radius: 12px;">Register</button>
    </form>
    <p class="text-center mt-3">Already have an account? 
      <a href="/api/v1/users/login" style="color: #007bff;">Login</a>
    </p>
  </div>
</div>
